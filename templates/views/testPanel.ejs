    <!--------------Header------------------>
    <div class="heading text-center offset-5">
        <h1>Create Quiz</h1>
        <hr>
        <h4>Number of Questions:</h4>
        <p id="no-of-qtn"></p>


        <section id="show-quiz-link" class="show-quiz-link">
            <label for="link"><b>Link for your Test :</label>
            <input type="text" name="link" id="link" class="link px-1">
            <div id="direct-link">
            </div>
        </section>

        <!--------------container----------------->
        <section class="sec py-1">
            <div class="row g-2 offset-2 ">
                <div class="col-xs-7 py-2 ">
                    <input type="text" name="title" class="inp px-3" id="title" placeholder="Enter the title here"
                        required>
                </div>
                <div id="quiz-area">
                    <form id="form-field">
                        <div class="col-xs-7 py-2">
                            <input type="text" name="question" class="inp px-3" placeholder="Type your question here"
                                required>
                        </div>
                        <div class="col-xs-7 py-2">
                            <input type="text" name="option1" class="inp px-3" placeholder="option 1" required>
                        </div>
                        <div class="col-xs-7  py-2">
                            <input type="text" name="option2" class="inp px-3" placeholder="option 2" required>
                        </div>
                        <div class="col-xs-7  py-2">
                            <input type="text" name="option3" class="inp px-3" placeholder="option 3" required>
                        </div>
                        <div class="col-xs-7  py-2">
                            <input type="text" name="option4" class="inp px-3" placeholder="option 4" required>
                        </div>
                        <div class="col-xs-7 py-2 ">
                            <select id="answer" class="inp px-3" required>
                                <option selected disabled>Select the correct answer</option>
                                <option value='ans1'>option 1</option>
                                <option value='ans2'>option 2</option>
                                <option value='ans3'>option 3</option>
                                <option value='ans4'>option 4</option>
                            </select><br>
                        </div>
                        <div class="col-xs-7  py-2">
                            <button type="submit" class="btn">Submit Question</button>
                        </div>
                </div>
        </section>
    </div>
    </form>
    </div>

    <!--------Create Quiz Button ------>
    <div class="row g-0  offset-2 text-center">
        <div class="quiz col-xs-7 py-2">
            <section id="save-quiz-data">

            </section>
            
        </div>
    </div>

    
    <section class="start-quiz1" id="start-quiz">
        <div class="row1">
            <div class="row2">
                <h2 id="qtn">Question :</h2>
            </div>
            <ul>
                <li>
                    <input type="radio" name="answer" id="ans1" class="answer">
                    <label for="ans1" id="option1">option 1</label>
                </li>
                <li>
                    <input type="radio" name="answer" id="ans2" class="answer">
                    <label for="ans2" id="option2"> option 2</label>
                </li>

                <button id="submit" class="btn2"><a href="#showScore"
                        style="text-decoration: none; color: white;">Submit</a></button>
            </ul>
        </div><br><br>
        <div class="row1">
            <div id="showScore" class="show-score">

            </div>
        </div>
    </section>

    <script src="/script/adminTestPanel.js"></script>

