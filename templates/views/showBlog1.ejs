<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Better Online Learning Experience for IIT-JEE Aspirants With Hands On Quizzes , 
    Exam Updates and Subject Categorised Compact Preparation Guides.">
    <meta name=”robots” content="index, follow">
    <meta property="og:title" content="ExamBytes Blog&Quiz" />
    <meta property="og:description" content="<%=article.description %>" />
    <meta property="og:site_name" content="ExamBytes" />
    <title>
        <%= article.title %> ExamBytes</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" href="data:,">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Thai+Looped&family=Libre+Baskerville:ital@0;1&family=Montserrat:wght@800&family=Mukta:wght@300;400;500&family=Source+Serif+4:ital,wght@0,200;1,500&display=swap" rel="stylesheet">

    <!--------CSS-------->
    <link rel="stylesheet" href="/css/ShowBlog.css">

</head>

<body>

    <!--------------Navigation----------------->

    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-info">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ExamByte</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home.ejs">Home</a>
                    </li>
                    <!-- <li class="nav-item">
                        <a class="nav-link" href="#">SIGN IN</a>
                    </li> -->
                    <li class="nav-item">
                        <a class="nav-link" href="/userTestsSection">Tests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container-fluid">

        <div class="container">
            <div class="container-data">
                <div class="row">
                    <h1>

                        <%= article.title %>
                    </h1>
                </div>

                <figure class="image">

                    <img src="/uploads/<%= article.image[0].filename %>" alt="...">

                    <p class="blog_title"><i class="fa-solid fa-calendar-days text-gray"></i>&nbsp;<span class="font-weight-bold">
                            <%= article.createdAt.toLocaleDateString() %>
                        </span>&nbsp;
                        <i class="fa-solid fa-user text-gray"></i>&nbsp;<span class="font-weight-bold">
                            <%= article.createdBy.name %>
                        </span>
                    </p>
                </figure>

                <div>
                    <!-- special text  -->
                    <pre><%- article.blogContent %></pre>
                </div>
                <div class="description">
                    <p>
                        <%=article.description%>
                    </p>
                    <p>
                        <%=article.markdown%>
                    </p>
                </div>
                <div class="buttons">

                    <% if(article.likes.includes(user._id)) { %>
                        <div>

                            <button class="like-btn" onclick="like_func(event);" data-post-id="<%= article.id %>" class="left_div__like" id="like_btn">
                                Unlike
                            </button>
                            <span id="likes-count-<%= article.id %>">
                                <%= article.likes.length %>
                            </span>
                        </div>
                        <% } else { %>
                            <div>

                                <button class="unlike-btn" onclick="like_func(event);" data-post-id="<%= article.id %>" class="left_div__like" id="like_btn">
                                    Like
                                </button>
                                <span id="likes-count-<%= article.id %>">
                                    <%= article.likes.length %>
                                </span>
                            </div>
                            <% } %>
                                <% if(user.bookmarks.includes(article._id)) { %>
                                    <div>

                                        <button class="save-btn" onclick="save_func(event);" data-post-id="<%= article.id %>" class="left_div__save" id="save_btn">
                                            Unsave
                                        </button>
                                    </div>
                                    <% } else { %>
                                        <div>

                                            <button class="unsave-btn" onclick="save_func(event);" data-post-id="<%= article.id %>" class="left_div__save" id="save_btn">
                                                Save </button>
                                        </div>
                                        <% } %>

                </div>

                <div class="social-share">
                    <a href="#whatsapp" class="whatsapp" onclick="window.open('whatsapp://send?text=This is WhatsApp sharing link')">
                        <i class="fa-brands fa-whatsapp"></i>
                    </a>
                    <a href="#facebook" class="facebook" onclick="window.open('https://www.facebook.com/cryswashington?fref=ts')">
                        <i class="fa-brands fa-facebook"></i>
                    </a>
                    <a href="#twitter" class="twitter">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="#linkedin" class="linkedin">
                        <i class="fa fa-linkedin"></i>
                    </a>
                    <a href="#instagram" class="instagram">
                        <i class="fa-brands fa-instagram"></i>
                    </a>
                    <a href="#youtube" class="youtube">
                        <i class="fa-brands fa-youtube"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>


    <!---------Footer---------->

    <footer class="footer">
        <div class="container flex-row">
            <div class="about-us" data-aos="fade-right" data-aos-delay="200">
                <h2>About us</h2>
                <p style="color: white;">Lorem ipsum dolor sit amet consectetur adipisicing elit. Consequatur voluptas sint doloremque esse quis facere quisquam officiis nostrum, omnis quam.</p>

            </div>


            <div class="follow" data-aos="flip-left" data-aos-delay="200">
                <h2>Follow</h2>
                <p style="color: white;">Let us be Social</p>
                <div>
                    <i class="fa-brands fa-facebook"></i>
                    <i class="fa-brands fa-twitter"></i>
                    <i class="fa-brands fa-instagram"></i>
                    <i class="fa-brands fa-youtube"></i>
                </div>
            </div>
        </div>
        <div class="rights flex-row">
            <h6 class="text-gray" style="color: white;">
                Copyright@2022 All rights reserved
                <a href="#">xyz</a>
            </h6>
        </div>
        <div class="move-up">
            <span><i class="fa-solid fa-circle-arrow-up fa-2x"></i></span>
        </div>
    </footer>



    <!-- JS  -->

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>

    <!--  Font Awesome  -->
    <script src="https://kit.fontawesome.com/50c832ee4b.js" crossorigin="anonymous"></script>
    <script>
        // for like btn
        const like = document.getElementById('like_btn');

        var toggleButtonText = {
            Like: function(button) {
                button.textContent = "Unlike";
            },
            Unlike: function(button) {
                button.textContent = "Like";
            }
        };

        var updatePostStats = {
            Like: function(postId) {
                document.querySelector('#likes-count-' + postId).textContent++;
            },
            Unlike: function(postId) {
                document.querySelector('#likes-count-' + postId).textContent--;
            }
        };

        const like_func = async(e) => {
            e.preventDefault();
            var postId = event.target.dataset.postId;

            var action = event.target.textContent.trim();
            // console.log(action)
            toggleButtonText[action](event.target);
            updatePostStats[action](postId);

            try {
                const liked = await fetch(`/like/${postId}`, {

                    method: 'PUT',
                    headers: {
                        "Content-Type": "application/json",
                    }
                })
                console.log(liked.json())
            } catch (err) {
                console.log('err')
            }
        };


        // for save btn               

        var toggleButtonTextSave = {
            Save: function(button) {
                button.textContent = "Unsave";
            },
            Unsave: function(button) {
                button.textContent = "Save";
            }
        };


        const save_func = async(e) => {

            e.preventDefault();
            var postId = event.target.dataset.postId;
            console.log(postId)

            // we can also implement that a post a alread saved in a user collection or not with action below
            var action = event.target.textContent.trim();

            toggleButtonTextSave[action](event.target);


            try {
                const saved = await fetch(`/bookmark/${postId}`, {

                    method: 'PUT',
                    headers: {
                        "Content-Type": "application/json",
                    }
                })
                const data = await saved;
                // console.log(data)
                // location.assign(data.url);
            } catch (err) {
                console.log(err)
            }
        };
    </script>





</body>

</html>