        <link rel="stylesheet" href="/css/payment.css">

        <link
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700"
            rel="stylesheet">


        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <!-- payumoney gateway -->

    <body>


        <form id="form" action="/payment_gateway2/payumoney"
            method="POST" class="decor">
            <div class="form-left-decoration"></div>
            <div class="form-right-decoration"></div>
            <div class="circle"></div>
            <div class="form-inner">
                <h1>Go For Your Purchase</h1>
                <input type="hidden" name="courseId" value="<%= courseId %>"
                    id="courseId " />
                <input type="text" placeholder="Name"
                    name="firstname" id="name">
                <input type="hidden" name="txnid" value="t1svtqtjRdl9ws"
                    id="txnid" />
                <div class="input-icons">
                    <!-- <i class="fa fa-dollar icon" style="font-size:24px"></i> -->
                    <span style='font-size:24px;' class="icon">&#8377;</span>
                    <input type="number" class="amount input-field"
                        name="amount"
                        placeholder="Amount" id="amount" value="1" readonly
                        />
                </div>

                <input class="con" name="phone" placeholder="Contact"
                    id="contact" type="text" />
                <input type="hidden" class="product" name="productinfo"
                    id="purpose"
                    value="educational purpose" />
                <input type="text" placeholder="Email" name="email" id="email"
                    />
                <button class="btn btn-secondary btns mx-3" type="submit">Proceed
                    To Pay </button>
            </div>
        </form>

    </body>

</html>
